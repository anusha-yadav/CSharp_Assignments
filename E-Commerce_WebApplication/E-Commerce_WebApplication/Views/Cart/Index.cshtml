<!-- Cart/Index.cshtml -->
@model E_Commerce_WebApplication.Models.Cart

<div class="container">
    <h1>Shopping Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                   <td>
                       <img src="@item.Products.ImageUrl" alt="Product Image" width="50" height="50">
                       <div>
                       @item.Products.ProductName
                       </div>
                       </td>
                   <td>@item.Quantity</td>
                   <td>&#x20b9; @item.Products.Price</td>
                  <td>&#x20b9; @(item.Quantity * item.Products.Price)</td>
                   <td>
                        <a asp-action="RemoveCartItem" asp-route-cartItemId="@item.CartItemId" class="btn btn-danger btn-sm">Remove</a>
                   </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-right">
        <strong>Total: &#x20b9; @Model.CartItems.Sum(item=>item.Quantity*item.Products.Price)</strong>
    </div>
    <div class="text-center">
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
</div>

