@{
}

@model List<Order>

<h2>My Orders</h2>

@foreach (var order in Model)
{
    <h3>Order ID: @order.OrderId</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in order.OrderItems)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td><strong>Total: @order.OrderItems.Sum(item => item.Product.Price * item.Quantity)</strong></td>
            </tr>
        </tfoot>
    </table>
}

