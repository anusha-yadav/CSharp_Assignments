@{
}

@model List<Products>

<h2>Search Results</h2>

<div>
    @if (Model.Count == 0)
    {
        <p>No products found.</p>
    }
    else
    {
        <ul>
            @foreach (var product in Model)
            {
                <li>
                    <a href="@Url.Action("ProductDetail", "Products", new { id = product.Id })">
                        @product.ProductName
                    </a>
                </li>
            }
        </ul>
    }
</div>

