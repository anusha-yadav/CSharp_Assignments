@model HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom container-fluid">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link dropdown" href="#">
                        <i class="fas fa-shopping-cart"></i>
                        Grocery
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button">
                        <i class="fas fa-laptop"></i>
                        Electronics
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button">
                        <i class="fas fa-tshirt"></i>
                        Fashion
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button">
                        <i class="fas fa-plane"></i>
                        Travel
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button">
                        <i class="fas fa-cubes"></i>
                        Toys
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="slider">
        <div class="slide active">
            <img src="~/images/slider1.png" alt="Slide 1">
        </div>
        <div class="slide">
            <img src="~/images/slider2.png" alt="Slide 2">
        </div>
        <div class="slide">
            <img src="~/images/slider3.png" alt="Slide 3">
        </div>
    </div>
    <!-- Featured Electronics Products -->
    <section class="featured-products">
        <div class="container">
            <h4 class="section-title">Best of Electronics</h4>
            <div class="row">
                @foreach (var item in Model.ElectronicsProducts)
                {
                    <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
                        <div class="thumbnail product-item" style="height:300px">
                            <div style="display:none;">
                                ViewBag.ImagePath = @item.ImageUrl
                                ViewBag.Des = @item.Description
                            </div>
                            <a href="@Url.Action("ProductDetail", "Products",new { id = @item.Id})">
                                <img class="img-responsive" title="Click to View Product detail"
                                     style="cursor:pointer;height:160px;width:100%"
                                     src=@Html.DisplayFor(modelItem=> item.ImageUrl) alt="Image" />
                            </a>
                            <div class="Samsung S23">
                                <h5>@item.ProductName</h5>
                                <p>&#x20b9; @item.Price</p>
                                <p>Available</p>
                                <div class="product-item-badge">New</div>
                            </div>
                        </div>
                    </div>
                        
                }
            </div>
            </div>
            <div class="container">
            <h4 class="section-title">Best of Home Appliances</h4>
            <div class="row">
                @foreach (var item in Model.AppliancesProducts)
                {
                    <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
                        <div class="thumbnail product-item" style="height:300px">
                            <div style="display:none;">
                                ViewBag.ImagePath = @item.ImageUrl
                                ViewBag.Des = @item.Description
                            </div>
                            <a href="@Url.Action("ProductDetail", "Products",new { id = @item.Id} )">
                                <img class="img-responsive" title="Click to View Product detail"
                                     style="cursor:pointer;height:160px;width:100%"
                                     src=@Html.DisplayFor(modelItem=> item.ImageUrl) alt="Image" />
                            </a>
                            <div class="Samsung S23">
                                <h5>@item.ProductName</h5>
                                <p>&#x20b9; @item.Price</p>
                                <p>Available</p>
                                <div class="product-item-badge">New</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
</html>
