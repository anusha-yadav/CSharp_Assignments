@using Web_App.Models;
@model Tuple<Order,IEnumerable<OrderItems>>

@{
    ViewData["Title"] = "Order";
    ViewBag.SubTitle = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Order ID : ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.OrderID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Customer Name : ");
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.User.Name) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Customer Address : ");
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.Address);
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Contact No : ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.User.PhoneNumber);
        </dd>
    </dl>

    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayName("Shipping ID : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.AddressID);
            </dd>
            <dt>
                @Html.DisplayName("Shipping Address : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Address)
            </dd>
        </dl>
    </div>
</div>
