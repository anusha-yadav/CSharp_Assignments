@model Web_App.Models.User

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mt-5">Login to Your Account</h2>
            <hr />

            @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "mt-4" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.username, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(model => model.username, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.password, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(model => model.password, new { @class = "form-control", required = "required" })
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
                <p class="aa-lost-password"><a href="#">Lost your password?</a></p>
            }

            <p class="mt-3">
                Don't have an account? @Html.ActionLink("Sign Up", "Create", "User")
            </p>
        </div>
    </div>
</div>






