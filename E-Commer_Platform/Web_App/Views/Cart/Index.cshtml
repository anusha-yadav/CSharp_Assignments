@model ECommerceWebApplication.Models.Cart

@{
    ViewData["Title"] = "Index";
}

<h2>Shopping Cart</h2>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td>@(item.Quantity * item.Product.Price)</td>
            </tr>
        }
    </tbody>
</table>


